@{
    ViewData["Title"] = "Home Page";
}


@model Note

<form asp-action="Insert" id="form-action" method="post" role="form">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input asp-for="Id" type="hidden">

    <input asp-for="Email" type="hidden">

    <div class="form-group">
        <label asp-for="Title">Title:</label>
        <input asp-for="Title" type="text" class="form-control" required>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Text">Text:</label>
        <input asp-for="Text" type="text" class="form-control" required>
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" id="form-button" class="btn btn-primary">Add Note</button>
    </div>
</form>