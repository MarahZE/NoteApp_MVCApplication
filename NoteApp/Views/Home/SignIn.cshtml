@{
    ViewData["Title"] = "SignIn";
}

<div class="text-center">
    <h1 class="display-4">Welcome To SignIn Page</h1>
</div>

<div>
    <h2>Sign In</h2>
    @model Account
    <form asp-action="AddAccount" method="post">
        <div class="form-group">
            <input asp-for="Id" type="hidden">
            <label for="email">Email:</label>
            <input type="email" id="email" asp-for="Email" class="form-control" required>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" id="password" asp-for="Password" class="form-control" required>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Sign In</button>
        </div>
    </form>
</div>
